<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec" xmlns:cda="urn:hl7-org:v3" xmlns:fhir="http://hl7.org/fhir" xmlns:lcg="http://www.lantanagroup.com" stylesheet="../SaxonPE-cda2fhir.xslt">
    
  <x:scenario label="Scenario for testing template 'author-reference'">
    <x:context href="../../../samples/cda/eICR-R3/eICR-CDA-001_R3.xml" />

    <x:call template="author-reference">
      <x:param name="pElementName">performer</x:param>
      <x:param name="pPractitionerRole" select="true()" />
    </x:call>
    <!-- Can't really test much of this as it requires the ancestor author -->
    <x:expect label="There should be a performer" test="count(fhir:performer) = 1" />
  </x:scenario>
    
  <x:scenario label="Scenario for testing template with match 'cda:doseQuantity">
    <x:context>
      <x:param name="pElementName">doseQuantity</x:param>
      <x:param name="pSimpleQuantity" select="false()" />
      <cda:doseQuantity value="1" unit="g" />
    </x:context>
    <x:expect label="There should be a doseQuantity with value = '1' and unit = 'g'" test="count(fhir:doseQuantity[fhir:value/@value='1'][fhir:unit/@value='g'])=1" />
  </x:scenario>

    <!-- SG 20210623: This should work but it doesn't - causes the whole test to fail -->
