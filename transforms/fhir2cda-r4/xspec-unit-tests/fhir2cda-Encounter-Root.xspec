<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec" xmlns:cda="urn:hl7-org:v3" xmlns:fhir="http://hl7.org/fhir"
    xmlns:lcg="http://www.lantanagroup.com" stylesheet="../fhir2cda.xslt">
    
    <!--Scenario for testing template with match 'fhir:Encounter' and mode 'encounter' -->
    <x:scenario
        label="Scenario for testing fhir:Encounter -> cda:encounter ">
        <x:context href="../../../samples/fhir/eICR-R2/eICR-FHIR-001_R2.xml" />
        
        <!--Confirm the Encounter entry exists and the Encounter Entry contains a templateId @root  -->
        <x:expect label="SHALL contain exactly one [1..1] @root=2.16.840.1.113883.10.20.22.4.49 (CONF:1198-26353). " 
            test="count(//cda:entry/cda:encounter/cda:templateId[@root='2.16.840.1.113883.10.20.22.4.49'])=2" />
       <!-- Confirm the Encounter Entry contains a templateId @extension -->
        <x:expect label="SHALL contain exactly one [1..1] @extension=2015-08-01 (CONF:1198-32548) " 
            test="count(//cda:entry/cda:encounter/cda:templateId[@extension='2015-08-01'])=1" />
        <!--Confirm the Encounter Entry contains an id element -->
        <x:expect label="SHALL contain at least one [1..*] id (CONF:1198-8713) " 
            test="count(//cda:entry/cda:encounter/cda:id)=1" />
        <!--Confirm the Encounter Entry contains a code element -->
        <x:expect label="SHALL contain exactly one [1..1] code (CONF:1198-8714) " 
            test="count(//cda:entry/cda:encounter/cda:code)=1" />
        <!--Confirm the Encounter Entry code element  contains an OriginalText -->
        <x:expect label="This code SHOULD contain zero or one [0..1] originalText (CONF:1198-8719)." 
            test="count(//cda:entry/cda:encounter/cda:code/cda:originalText)=1" />
        <!--Confirm the Encounter Entry contains an effectiveTime element -->
        <x:expect label="SHALL contain exactly one [1..1] effectiveTime (CONF:1198-8715)." 
            test="count(//cda:entry/cda:encounter/cda:effectiveTime)=1" />
        
    </x:scenario>
    
    <x:scenario
        label="Scenario for testing template with match 'fhir:diagnosis">
        <x:context href="../../../samples/fhir/eICR-R2/eICR-FHIR-001_R2.xml" />
      
        <!--Confirm the Encounter Entry contains an Encounter Diagnosis Template  -->
        <x:expect label="SHALL contain exactly one [1..1]  Encounter Diagnosis (V3) (CONF:1198-15973). " 
            test="count(//cda:entry/cda:encounter/cda:entryRelationship/cda:act/cda:templateId)=2" />
        <!--Confirm the Encounter Entry contains a Encounter Diagnosis Template @root 2.16.840.1.113883.10.20.22.4.80  -->
        <x:expect label="SHALL contain exactly one [1..1]  Encounter Diagnosis (V3) (identifier: urn:hl7ii:2.16.840.1.113883.10.20.22.4.80:2015-08-01) (CONF:1198-15973). " 
            test="count(//cda:entry/cda:encounter/cda:entryRelationship/cda:act/cda:templateId[@root='2.16.840.1.113883.10.20.22.4.80'][@extension='2015-08-01'])=1" />
        <!--Confirm the Encounter Entry Diagnosis contains a Problem Observation Template -->
        <x:expect label="SHALL contain exactly one [1..1]  Problem Observation (V3) (identifier: urn:hl7ii:2.16.840.1.113883.10.20.22.4.4:2015-08-01) (CONF:1198-14898). " 
            test="count(//cda:entry/cda:encounter/cda:entryRelationship/cda:act/cda:entryRelationship/cda:observation/cda:templateId[@root='2.16.840.1.113883.10.20.22.4.4'][@extension='2015-08-01'])=1" />
        <!--Confirm the Encounter Entry Diagnosis contains an eICR Specific Problem Observation Template -->
        <x:expect label="SHALL contain exactly one [1..1] @root=2.16.840.1.113883.10.20.15.2.3.3 (CONF:4482-169). " 
            test="count(//cda:entry/cda:encounter/cda:entryRelationship/cda:act/cda:entryRelationship/cda:observation/cda:templateId[@root='2.16.840.1.113883.10.20.15.2.3.3'][@extension='2021-01-01'])=1" />
        
  </x:scenario>

</x:description>
