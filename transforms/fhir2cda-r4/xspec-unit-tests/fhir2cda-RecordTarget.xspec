<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec" xmlns:cda="urn:hl7-org:v3" xmlns:fhir="http://hl7.org/fhir"
  xmlns:lcg="http://www.lantanagroup.com" stylesheet="../fhir2cda-RecordTarget.xslt">
  <x:scenario
    label="Scenario for testing template with match 'fhir:Patient[parent::fhir:Patient]">
    <x:context href="../../../samples/fhir/eICR-R2/eICR-FHIR-001_R2.xml" 
      select="//fhir:entry/fhir:resource/fhir:Patient"  mode="record-target" >
    </x:context>
    <!--Confirm the Record Target exists-->
    <x:expect label="SHALL contain at least one [1..*] recordTarget (CONF:1198-5266)." 
      test="count(cda:recordTarget)=1" />
    <!-- Confirm the Record Target contains a patientRole element -->
    <x:expect label="Such recordTargets SHALL contain exactly one [1..1] patientRole (CONF:1198-5267)." 
      test="count(cda:recordTarget/cda:patientRole)=1" />
    <!-- Confirm the patientRole contains an id element -->
    <x:expect label="This patientRole SHALL contain at least one [1..*] id (CONF:1198-5268).." 
      test="count(cda:recordTarget/cda:patientRole/cda:id)=1" />
    <!-- Confirm the patientRole contains an address element -->
    <x:expect label="This patientRole SHALL contain at least one [1..*]  US Realm Address (AD.US.FIELDED)(CONF:1198-5271)." 
      test="count(cda:recordTarget/cda:patientRole/cda:addr)=1" />
    <!-- Confirm the patientRole contains an telecom element -->
    <x:expect label="This patientRole SHALL contain at least one [1..*] telecom (CONF:1198-5280)." 
      test="count(cda:recordTarget/cda:patientRole/cda:telecom)=2" />
    <!-- Confirm the patientRole telecom contains a use element -->
    <x:expect label="Such telecoms SHOULD contain zero or one [0..1] @use (CONF:1198-5375)." 
      test="count(cda:recordTarget/cda:patientRole/cda:telecom[@use])=2" />
    <!-- Confirm the patientRole contains a patient element -->
    <x:expect label="iv.	This patientRole SHALL contain exactly one [1..1] patient (CONF:1198-5283)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient)=1" />
    <!-- Confirm the patient contains a name element -->
    <x:expect label="This patient SHALL contain at least one [1..*]  US Realm Patient Name (CONF:1198-5284)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:name)=1" />
    <!-- Confirm the patient contains an administrativeGenderCode element -->
    <x:expect label="This patient SHALL contain exactly one [1..1] administrativeGenderCode(CONF:1198-6394)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:administrativeGenderCode)=1" />
    <!-- Confirm the patient contains a birthTime element -->
    <x:expect label="This patient SHALL contain exactly one [1..1] birthTime (CONF:1198-5298)" 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:birthTime)=1" />
    <!-- Confirm the patient contains a raceCode element -->
    <x:expect label="This patient SHALL contain exactly one [1..1] raceCode(CONF:1198-5322)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:raceCode)=1" />
    <!-- Confirm the patient contains a raceCode element -->
    <x:expect label="This patient SHALL contain exactly one [1..1] ethnicGroupCode (CONF:1198-5323)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:ethnicGroupCode)=1" />
    <!-- Confirm the patient contains a languageCommunication element -->
    <x:expect label="12.	This patient SHOULD contain zero or more [0..*] languageCommunication (CONF:1198-5406)." 
      test="count(cda:recordTarget/cda:patientRole/cda:patient/cda:languageCommunication)=1" />
  </x:scenario>
</x:description>
